extends layout

block content
    h1= title 
    form(method="POST", action="/new")
        div
            label(for="user")="Username"
            input(
                type='text'
                name='user'
                id="user"
            )
        
        |
        div
            label(for="message")="Message"
            input(
                type='text'
                name='message'
                id="message"
            )
        |
        |
        |
        button(type='submit' class="submit")= "Submit"
